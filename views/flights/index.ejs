<%- include('../partials/header') %>

<h2>Home Page</h2>

<h2>Flight List</h2>
 <table>
   <thead>
     <tr>
       <th>Airline</th>
       <th>Departure Airport</th>
       <!-- <th>Destination Airport</th> -->
       <th>Flight No</th>
       <th>Departure</th>
       <th>More Info</th>
     </tr>
   </thead>
   <tbody>
     <!-- Write the line of EJS to iterate over movies using forEach -->
     <% flights.forEach(f => { %>
       <tr>
         <td><%= f.airline %></td>
         <td><%= f.airport %></td>
         <!-- <td></td> -->
         <td><%= f.flightNo %></td>
         <td><%= f.departs %></td>
         <td><a href="/flights/<%=f._id %>">Details</a></td>
       </tr>
      <% }) %>
     <!-- Close the forEach using EJS here -->
   </tbody>
 </table>

 <%- include('../partials/footer') %>
